{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QEMU Debug",
            "type": "cppdbg",
            "request": "launch", 
            "program": "${workspaceFolder}/build/kernel.bin",//路径
            "args": [],//启动参数,如果需要记录日志可以自己增加参数。因为gdbsever已经有了参数，这里可以不用设置
            "stopAtEntry": false,//会自动停在main,不需要则设置为false
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb", //运行模式
            "logging": {
                "moduleLoad": false,
                "engineLogging": false,
                "trace": false
            },
            "setupCommands": [ //命令
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "set architecture i386:x86-64",
                    "text": "set architecture i386:x86-64",
                    "ignoreFailures": true
                },
                {
                    "description": "Connect to gdbserver",
                    "text": "target remote :1234", // 连接到 GDB 服务器
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath":"gdb",//工具链gdb
            "miDebuggerServerAddress":"localhost:1234"//远程端口

        }
    ]
}